<Window x:Class="Contract_MC_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contract_MC_System"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/> <!-- Sidebar -->
            <ColumnDefinition Width="*"/>   <!-- Main content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Background="#2c3e50" VerticalAlignment="Stretch">
            <TextBlock Text="CMCS" Foreground="White" FontSize="24" 
                       FontWeight="Bold" Margin="20" HorizontalAlignment="Center"/>
            
            <Button Content="Lecturer Dashboard" Margin="10" Padding="10"
                    Background="#34495e" Foreground="White" BorderBrush="Transparent"/>
            <Button Content="Coordinator Dashboard" Margin="10" Padding="10"
                    Background="#34495e" Foreground="White" BorderBrush="Transparent"/>
            <Button Content="Manager Dashboard" Margin="10" Padding="10"
                    Background="#34495e" Foreground="White" BorderBrush="Transparent"/>
        </StackPanel>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Margin="20">
            <TabControl>
                <!-- Lecturer Tab -->
                <TabItem Header="Lecturer">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <TextBlock Text="Submit Monthly Claim" FontSize="18" FontWeight="Bold" Margin="0 0 0 15"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                <TextBlock Text="Hours Worked:" Width="150" VerticalAlignment="Center"/>
                                <TextBox Width="200"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                <TextBlock Text="Hourly Rate:" Width="150" VerticalAlignment="Center"/>
                                <TextBox Width="200"/>
                            </StackPanel>

                            <Button Content="Submit Claim" Width="150" Height="35" 
                                    Background="#27ae60" Foreground="White" Margin="0 10 0 20"/>

                            <TextBlock Text="Upload Supporting Document:" Margin="0 0 0 10"/>
                            <Button Content="Upload Document" Width="150" Height="35" 
                                    Background="#2980b9" Foreground="White"/>
                            
                            <Separator Margin="0 20"/>

                            <TextBlock Text="Claim Status" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>
                            <ListBox Height="150">
                                <ListBoxItem>Claim #001 - Pending</ListBoxItem>
                                <ListBoxItem>Claim #002 - Approved</ListBoxItem>
                            </ListBox>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Coordinator Tab -->
                <TabItem Header="Coordinator">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <TextBlock Text="Verify Claims" FontSize="18" FontWeight="Bold" Margin="0 0 0 15"/>
                            <ListBox Height="200">
                                <ListBoxItem>Claim #001 - Pending Verification</ListBoxItem>
                            </ListBox>
                            <StackPanel Orientation="Horizontal" Margin="0 10">
                                <Button Content="Approve" Width="120" Background="#27ae60" Foreground="White" Margin="5"/>
                                <Button Content="Reject" Width="120" Background="#c0392b" Foreground="White" Margin="5"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Manager Tab -->
                <TabItem Header="Manager">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <TextBlock Text="Approve Claims" FontSize="18" FontWeight="Bold" Margin="0 0 0 15"/>
                            <ListBox Height="200">
                                <ListBoxItem>Claim #001 - Awaiting Final Approval</ListBoxItem>
                            </ListBox>
                            <StackPanel Orientation="Horizontal" Margin="0 10">
                                <Button Content="Approve" Width="120" Background="#27ae60" Foreground="White" Margin="5"/>
                                <Button Content="Reject" Width="120" Background="#c0392b" Foreground="White" Margin="5"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
